<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.board.model.dao.BookmarkDao">

	<!-- 북마크 -->
	<insert id="selectBookmark" parameterType="String">
		INSERT INTO BOOKMARK VALUES(#{mapId},#{userId},true)
	</insert>
	
	<!-- 코스 별 좋아요 출력  -->
	<select id="selectBookmarks" parameterType="int">
		SELECT COUNT(*) CNT 
		FROM BOOKMARK
		WHERE map_id = #{mapId} AND marked = true
		GROUP BY ${mapId}
	</select>
	
	<!-- 좋아요 업데이트 -->
	<update id="updateBookmark" parameterType="Bookmark">
		UPDATE BOOKMARK
		SET marked = NOT marked
		WHERE map_id = #{mapId} AND user_id = #{userId}
	</update>
	
</mapper>